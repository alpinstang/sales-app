@model AspnetIdentitySample.Models.AfterVisit
@{
    ViewBag.Title = "After Visit Create | To Do";
}

<h2>Create After Visit Report</h2>
<p>Fill in the details of your interactions post-visit using the form below</p>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        @*<p><a href="" id="appointment-button" class="btn btn-primary btn-large">Add Appointment</a></p>
            <p><a href="" id="after-visit-button" class="btn btn-primary btn-large">Add After Visit Info</a></p>*@

        <!--AFTER VISIT FORM-->
        @*These identities will comprise the After Visit Info form
            public string VisitDate { get; set; }
            public string Company { get; set; }
            public string Competition { get; set; }
            public string PurchaseMethod { get; set; }
            public string PurchaseDate { get; set; }
            public string FutureDate { get; set; }
            public string Discussion { get; set; }*@
        @*<div id="after-visit-form">*@

    @{
        List<SelectListItem> YesNoList = new List<SelectListItem>();
        YesNoList.Add(new SelectListItem
                {
                    Text = "Yes I Did",
                    Value = "Yes"
                    //Selected = true
                });
        YesNoList.Add(new SelectListItem
                {
                    Text = "No I Did Not",
                    Value = "No",
                });
        YesNoList.Add(new SelectListItem
        {
            Text = "Other",
            Value = "Other",
        });

        List<SelectListItem> PaymentList = new List<SelectListItem>();
        PaymentList.Add(new SelectListItem
                {
                    Text = "Cash",
                    Value = "Cash",
                    //Selected = true
                });
        PaymentList.Add(new SelectListItem
                {
                    Text = "Credit/Debit",
                    Value = "Credit/Debit",
                });
        PaymentList.Add(new SelectListItem
        {
            Text = "Check",
            Value = "Check",
        });

        PaymentList.Add(new SelectListItem
        {
            Text = "E-Check",
            Value = "E-Check",
        });

        PaymentList.Add(new SelectListItem
        {
            Text = "Money Order",
            Value = "Money Order",
        });

        PaymentList.Add(new SelectListItem
        {
            Text = "Cashier Check",
            Value = "Cashier Check",
        });

        PaymentList.Add(new SelectListItem
        {
            Text = "PayPal",
            Value = "PayPal",
        });
    }

        <h4>After Visit Form</h4>
        <hr />
        @Html.ValidationSummary(true)
        <div class="form-group">
            @Html.LabelFor(model => model.VisitDate, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.VisitDate, new { @class = "date-picker" })
                @Html.ValidationMessageFor(model => model.VisitDate)
            </div>
        </div>
        <div class="form-group">
            @*@Html.LabelFor(model => model.Company, new { @class = "control-label col-md-2" })*@
            @Html.Label("Customer", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Company)
                @Html.ValidationMessageFor(model => model.Company)
            </div>
        </div>
        <p>Who is our competition? What separates us from the competition?</p>
        <div class="form-group">
            @Html.LabelFor(model => model.Competition, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextAreaFor(model => model.Competition)
                @Html.ValidationMessageFor(model => model.Competition)
            </div>
        </div>
        <div class="form-group">
            @*@Html.LabelFor(model => model.Description, new { @class = "control-label col-md-2" })*@
            @Html.Label("Purchase Method", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.PurchaseMethod)
                @Html.ValidationMessageFor(model => model.PurchaseMethod)
                @*@Html.DropDownListFor(model => model.PurchaseMethod, PaymentList, "Select Type...", new { @class = "PaymentList-Dropdown" })*@
            </div>
        </div>
        <p><i>Purchase Method Examples: 1 Quote, 3 Quotes, Bid, etc.</i></p>
        <div class="form-group">
            @*@Html.LabelFor(model => model.Description, new { @class = "control-label col-md-2" })*@
            @Html.Label("Expected Purchase Date", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.PurchaseDate, new { @class = "date-picker" })
                @Html.ValidationMessageFor(model => model.PurchaseDate)
            </div>
        </div>
        <div class="form-group">
            @*@Html.LabelFor(model => model.Description, new { @class = "control-label col-md-2" })*@
            @Html.Label("Follow-Up Date", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @*@Html.EditorFor(model => model.FutureDate)*@
                @Html.ValidationMessageFor(model => model.FutureDate)
                @Html.TextBoxFor(model => model.FutureDate, new { @class = "date-picker" })
            </div>
        </div>
        <div class="form-group">
            @*@Html.LabelFor(model => model.Description, new { @class = "control-label col-md-2" })*@
            @Html.Label("When do they plan on purchasing new vehicles? Type?", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextAreaFor(model => model.NewVehicles)
                @Html.ValidationMessageFor(model => model.NewVehicles)
            </div>
        </div>
        <div class="form-group">
            @*@Html.LabelFor(model => model.Description, new { @class = "control-label col-md-2" })*@
            @Html.Label("How many vehicles will they purchase?", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.NewVehiclesCount)
                @Html.ValidationMessageFor(model => model.NewVehiclesCount)
            </div>
        </div>
        <div class="form-group">
            @*@Html.LabelFor(model => model.Description, new { @class = "control-label col-md-2" })*@
            @Html.Label("Did you discuss cameras/graphics?", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextAreaFor(model => model.Discussion)
                @Html.ValidationMessageFor(model => model.Discussion)
                @*@Html.DropDownListFor(model => model.Discussion, YesNoList, "Select One...", new { @class = "YesNoList-Dropdown" })*@
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}
<div>
    @Html.ActionLink("Back to List", "Index")
</div>

<link href="@Url.Content("~/Content/datepicker.css")" rel="stylesheet" />

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
@*Datepicker-bootstrap Must load after jquery ui and bootstrap to pull dependencies and reference correctly*@
<script src="@Url.Content("~/Scripts/bootstrap-datepicker.js")" type="text/javascript"></script>

    <script language="javascript" type="text/javascript">

        jQuery(document).ready(function ($) {

            $('.date-picker').datepicker();

            $('input.check-box').change(function () {
                if ($(this).is(':checked'))
                    $('div.future-section').show();
                else
                    $('div.future-section').hide();
            }).change();
        });

        jQuery(document).ready(function () {
            $("#after-visit-button").click(function () {
                $("#after-visit-form").show(1000);
                $("#appointment-form").hide(1000);
            });
            $("#appointment-button").click(function () {
                $("#appointment-form").show(1000);
                $("#after-visit-form").hide(1000);
            });
        });
    </script>
}
